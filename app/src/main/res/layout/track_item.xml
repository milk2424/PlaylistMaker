<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/transparent"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp"
    >

    <ImageView
        android:id="@+id/track_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/track_name"
            style="@style/SearchTextView"
            android:textColor="@color/search_track_name_color"
            android:textSize="16sp"
            tools:text="Yesterday(Remastered 2009)"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/track_author"
                style="@style/SearchTextView"
                android:layout_weight="1"
                android:textColor="@color/search_track_bottom_text_color"
                android:textSize="@dimen/search_item_bottom_text_size"
                tools:text="The Beatles"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="5dp"
                android:src="@drawable/track_ellipse"
                app:tint="@color/search_track_bottom_text_color"
                />

            <TextView
                android:id="@+id/track_time"
                style="@style/SearchTextView"
                android:layout_weight="0"
                android:textColor="@color/search_track_bottom_text_color"
                android:textSize="@dimen/search_item_bottom_text_size"
                tools:text="2:55"
                />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:src="@drawable/btn_arrow_forward"
        app:tint="@color/search_track_bottom_text_color"
        />
</LinearLayout>