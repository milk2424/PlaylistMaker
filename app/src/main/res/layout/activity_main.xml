<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_screen_bg"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="40dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/main_screen_text_size" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:padding="0dp"
        android:text="@string/search"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/main_screen_text_size"
        android:textStyle="normal"
        app:cornerRadius="@dimen/main_screen_btn_corner"
        app:icon="@drawable/btn_search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/main_icon_padding"
        app:iconTint="@color/black" />


    <Button
        android:id="@+id/btn_library"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:padding="0dp"
        android:text="@string/library"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/main_screen_text_size"
        android:textStyle="normal"
        app:cornerRadius="@dimen/main_screen_btn_corner"
        app:icon="@drawable/btn_library"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/main_icon_padding"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:padding="0dp"
        android:layout_marginBottom="28dp"
        android:text="@string/settings"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/main_screen_text_size"
        android:textStyle="normal"
        app:cornerRadius="@dimen/main_screen_btn_corner"
        app:icon="@drawable/btn_settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/main_icon_padding"
        app:iconTint="@color/black" />

</LinearLayout>