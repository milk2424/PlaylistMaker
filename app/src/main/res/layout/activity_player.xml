<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/player_bg_color"
        >


        <ImageButton
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:backgroundTint="@android:color/transparent"
            android:padding="0dp"
            android:src="@drawable/btn_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/player_track_name_text_color"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="24dp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="24dp"
            />

        <ImageView
            android:id="@+id/track_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="46dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/arrow_back"
            tools:src="@drawable/ic_launcher_background"
            />

        <TextView
            android:id="@+id/track_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_medium"
            android:maxLines="1"
            android:textColor="@color/player_track_name_text_color"
            android:textFontWeight="400"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/track_image"
            tools:text="Yesterday (Remastered 2009)"
            />

        <TextView
            android:id="@+id/track_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_medium"
            android:maxLines="1"
            android:textColor="@color/player_track_name_text_color"
            android:textFontWeight="400"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/track_name"
            tools:text="The Beatles"
            />

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/btn_start_player"
            app:layout_constraintEnd_toStartOf="@id/right_guideline"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintTop_toBottomOf="@id/track_artist"
            app:tint="@color/player_track_btn_play_bg_color"
            />


        <ImageButton
            android:id="@+id/btn_add_to_library"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:background="@drawable/player_btns_bg"
            android:src="@drawable/btn_add_to_library"
            app:layout_constraintBottom_toBottomOf="@id/btn_play"
            app:layout_constraintEnd_toStartOf="@id/btn_play"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/left_guideline"
            app:layout_constraintTop_toTopOf="@id/btn_play"
            app:tint="@color/white"
            />

        <ImageButton
            android:id="@+id/btn_save_to_favorite"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:background="@drawable/player_btns_bg"
            android:src="@drawable/btn_save_to_favorite"
            app:layout_constraintBottom_toBottomOf="@id/btn_play"
            app:layout_constraintEnd_toEndOf="@id/right_guideline"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/btn_play"
            app:layout_constraintTop_toTopOf="@id/btn_play"
            app:tint="@color/white"
            />

        <TextView
            android:id="@+id/current_track_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="0:30"
            android:textColor="@color/player_track_name_text_color"
            android:textFontWeight="500"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/btn_play"
            app:layout_constraintStart_toStartOf="@id/btn_play"
            app:layout_constraintTop_toBottomOf="@id/btn_play"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_category_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_category_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/category_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_tags="category_duration,category_album,category_year,category_genre,category_country"
            />

        <TextView
            android:id="@+id/category_duration"
            style="@style/playerTrackInfoCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/track_duration"
            app:layout_constraintEnd_toStartOf="@id/right_category_guideline"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/left_category_guideline"
            app:layout_constraintTag="category_duration"
            app:layout_constraintTop_toBottomOf="@id/current_track_time"
            />


        <TextView
            android:id="@+id/category_duration_value"
            style="@style/playerTrackInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="@id/category_duration"
            app:layout_constraintEnd_toStartOf="@id/right_category_guideline"
            app:layout_constraintStart_toEndOf="@id/category_barrier"
            app:layout_constraintTop_toTopOf="@id/category_duration"
            tools:text="4:44"
            />

        <TextView
            android:id="@+id/category_album"
            style="@style/playerTrackInfoCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/album"
            app:layout_constraintEnd_toEndOf="@id/category_duration"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/category_duration"
            app:layout_constraintTag="category_album"
            app:layout_constraintTop_toBottomOf="@id/category_duration"
            />


        <TextView
            android:id="@+id/category_album_value"
            style="@style/playerTrackInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@id/category_album"
            app:layout_constraintEnd_toStartOf="@id/right_category_guideline"
            app:layout_constraintStart_toEndOf="@id/category_barrier"
            app:layout_constraintTop_toTopOf="@id/category_album"
            tools:text="Yesterday (Remastered 2009)"
            />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/album_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="category_album,category_album_value"
            />

        <TextView
            android:id="@+id/category_year"
            style="@style/playerTrackInfoCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/year"
            app:layout_constraintEnd_toEndOf="@id/category_album"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/category_album"
            app:layout_constraintTag="category_year"
            app:layout_constraintTop_toBottomOf="@id/category_album"
            />


        <TextView
            android:id="@+id/category_year_value"
            style="@style/playerTrackInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@id/category_year"
            app:layout_constraintEnd_toStartOf="@id/right_category_guideline"
            app:layout_constraintStart_toEndOf="@id/category_barrier"
            app:layout_constraintTop_toTopOf="@id/category_year"
            tools:text="1992"
            />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/year_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="category_year,category_year_value"
            />

        <TextView
            android:id="@+id/category_genre"
            style="@style/playerTrackInfoCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/genre"
            app:layout_constraintEnd_toEndOf="@id/category_year"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/category_year"
            app:layout_constraintTag="category_year"
            app:layout_constraintTop_toBottomOf="@id/category_year"
            />


        <TextView
            android:id="@+id/category_genre_value"
            style="@style/playerTrackInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@id/category_genre"
            app:layout_constraintEnd_toStartOf="@id/right_category_guideline"
            app:layout_constraintStart_toEndOf="@id/category_barrier"
            app:layout_constraintTop_toTopOf="@id/category_genre"
            tools:text="Rock"
            />


        <TextView
            android:id="@+id/category_country"
            style="@style/playerTrackInfoCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/country"
            app:layout_constraintEnd_toEndOf="@id/category_genre"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/category_genre"
            app:layout_constraintTag="category_year"
            app:layout_constraintTop_toBottomOf="@id/category_genre"
            />


        <TextView
            android:id="@+id/category_country_value"
            style="@style/playerTrackInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@id/category_country"
            app:layout_constraintEnd_toStartOf="@id/right_category_guideline"
            app:layout_constraintStart_toEndOf="@id/category_barrier"
            app:layout_constraintTop_toTopOf="@id/category_country"
            tools:text="Belarus"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>