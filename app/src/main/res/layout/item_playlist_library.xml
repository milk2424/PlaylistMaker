<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@color/main_screen_bg"
    >

    <ImageView
        android:id="@+id/imgPlaylist"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/no_track_art"
        />

    <TextView
        android:id="@+id/tvPlaylistName"
        style="@style/PlaylistLibraryTextStyle"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@id/imgPlaylist"
        app:layout_constraintStart_toStartOf="@id/imgPlaylist"
        app:layout_constraintTop_toBottomOf="@id/imgPlaylist"
        tools:text="PlaAfas"
        />

    <TextView
        android:id="@+id/tvSongsCount"
        style="@style/PlaylistLibraryTextStyle"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@id/imgPlaylist"
        app:layout_constraintStart_toStartOf="@id/imgPlaylist"
        app:layout_constraintTop_toBottomOf="@id/tvPlaylistName"
        tools:text="1 трек"
        />


</androidx.constraintlayout.widget.ConstraintLayout>