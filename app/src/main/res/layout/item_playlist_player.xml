<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_screen_bg"
    >

    <ImageView
        android:id="@+id/imgPlaylist"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/no_track_art"
        />

    <TextView
        android:id="@+id/tvPlaylistName"
        style="@style/PlaylistLibraryTextStyle"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/day_dark_night_white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tvSongsCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgPlaylist"
        app:layout_constraintTop_toTopOf="@id/imgPlaylist"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Best SOngs!"
        />

    <TextView
        android:id="@+id/tvSongsCount"
        style="@style/PlaylistLibraryTextStyle"
        android:layout_marginTop="4dp"
        android:textColor="@color/day_gray_night_white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/imgPlaylist"
        app:layout_constraintEnd_toEndOf="@id/tvPlaylistName"
        app:layout_constraintStart_toStartOf="@id/tvPlaylistName"
        app:layout_constraintTop_toBottomOf="@id/tvPlaylistName"
        tools:text="1 трек"
        />


</androidx.constraintlayout.widget.ConstraintLayout>