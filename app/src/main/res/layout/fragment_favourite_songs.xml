<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".ui.library.favourite_songs.FavouriteSongsFragment">

    <LinearLayout
        android:id="@+id/error_empty_library_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:orientation="vertical">

        <ImageView
            style="@style/emptySongListError"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/your_library_is_empty"
            android:textColor="@color/error_empty_song_library_text_color"
            android:textFontWeight="400"
            android:textSize="19sp" />
    </LinearLayout>

</FrameLayout>