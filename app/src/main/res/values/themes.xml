<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />

    <style name="Widget.AppCompat.Button.SettingsButton" parent="Widget.MaterialComponents.Button">
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/settings_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:paddingVertical">21dp</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="iconGravity">end</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAlignment">textStart</item>
        <item name="iconTint">@color/settings_icon_color</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>


    <style name="MainScreenButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_marginBottom">@dimen/main_button_margin_bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_dark</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="cornerRadius">@dimen/main_screen_btn_corner</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_icon_padding</item>
        <item name="iconTint">@color/black</item>
    </style>


    <style name="PreviousScreenTextview" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/previous_screen_text_color</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableStartCompat">@drawable/btn_arrow_back</item>
        <item name="drawableTint">@color/previous_screen_text_color</item>
        />
    </style>

    <style name="SearchTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <color name="main_screen_bg">@color/main_blue</color>
    <color name="previous_screen_text_color">@color/main_dark</color>

    <color name="search_edit_text_bg_color">@color/light_gray</color>
    <color name="search_edit_text_icon_color">@color/yp_text_gray</color>
    <color name="search_edit_text_hint_color">@color/yp_text_gray</color>

    <color name="settings_screen_bg">@color/white</color>
    <color name="settings_text_color">@color/main_dark</color>
    <color name="settings_icon_color">@color/settings_btn_color</color>
    <color name="settings_back_icon_color">@color/main_dark</color>
    <color name="search_track_name_color">@color/black</color>
    <color name="search_track_bottom_text_color">@color/yp_text_gray</color>
</resources>